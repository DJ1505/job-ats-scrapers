# Breezy Job Scraper Configuration

# API Settings
API_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT_DELAY=1.0

# Scraping Settings
MAX_CONCURRENT_REQUESTS=5
ENABLE_HTML_FALLBACK=true
RESPECT_ROBOTS_TXT=true
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Output Settings
OUTPUT_FORMAT=json
OUTPUT_DIRECTORY=./output
INCLUDE_RAW_DATA=false

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=

# Breezy API Settings
BREEZY_API_BASE_URL=https://api.breezy.hr/v3
BREEZY_PUBLIC_BASE_URL=https://breezy.hr

# Authentication (optional - for private endpoints)
BREEZY_API_TOKEN=
BREEZY_EMAIL=
BREEZY_PASSWORD=
